# WhatsApp Bot Environment Variables
# Copy this file to .env and fill in your values

# Bot Configuration
BOT_NAME=BLACKSKY-MD
PREFIX=.
OWNER_NUMBER=your-number-here
SESSION_ID=BlackskyMD

# Platform Configuration
PLATFORM=heroku
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0
LOG_LEVEL=info

# Auth and Session Configuration
AUTH_FOLDER=./auth_info_baileys
AUTH_FILE_BASE64=
CREDS_DATA=

# Heroku Specific Configuration
HEROKU_APP_NAME=your-app-name
AUTO_RESTART=true
KEEP_ALIVE_URL=https://your-app-name.herokuapp.com/

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=your-webhook-secret

# Additional Security Settings
RATE_LIMIT=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Database Configuration (if using Heroku Postgres)
# DATABASE_URL=postgres://username:password@hostname:port/database_name

# Logging Configuration
DEBUG=false
VERBOSE_LOGGING=false
LOG_FORMAT=json  # options: json, pretty
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/whatsapp.log

# Performance Tuning
MAX_RETRIES=10
RECONNECT_INTERVAL=3000
QR_TIMEOUT=60000
CONNECTION_TIMEOUT=60000