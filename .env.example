# WhatsApp Bot Environment Variables
# Copy this file to .env and fill in your values

# Bot Configuration
BOT_NAME=BLACKSKY-MD
PREFIX=!
OWNER_NUMBER=1234567890
SESSION_ID=BlackskyMD

# Platform Configuration (set to 'heroku' for Heroku deployment)
PLATFORM=heroku
NODE_ENV=production

# Heroku Specific Configuration
# These are used for Heroku deployment to maintain persistent session
CREDS_DATA=
AUTH_FILE_BASE64=
AUTO_RESTART=true
KEEP_ALIVE_URL=https://your-app-name.herokuapp.com/

# Database Configuration (if using Heroku Postgres)
# This will be automatically set by Heroku when you add the Postgres add-on
# DATABASE_URL=postgres://username:password@hostname:port/database_name