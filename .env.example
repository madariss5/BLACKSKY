# WhatsApp Bot Configuration

# Bot Owner Configuration
# Your full phone number without any special characters
# Example: 12025550199 (with country code)
OWNER_NUMBER=

# Session Management
# Set to true to enable session continuation when bot restarts
PERSISTENT_SESSION=true

# Connection Settings
# Set to true to enable QR code web server for easier scanning
ENABLE_WEB_QR=true 
# Port for the QR web server (default: 5000)
QR_PORT=5000

# Security Settings
# Set to true to enable strict permissions checking (recommended for production)
STRICT_SECURITY=true
# Set to true to enable continuous auto-backup of session credentials
AUTO_BACKUP_SESSION=true 

# Media Settings
# Max file size for media uploads (in MB)
MAX_MEDIA_SIZE=100
# Set to true to enable GIF optimization for better delivery
OPTIMIZE_GIFS=true

# Group Settings
# Set to true to allow NSFW commands in groups
ALLOW_GROUP_NSFW=false
# Set to true to log all group messages (may impact performance)
LOG_GROUP_MESSAGES=false

# API Keys (Optional)
# For weather commands
OPENWEATHERMAP_API_KEY=
# For AI image generation
OPENAI_API_KEY=
# For sticker/video processing
FFMPEG_PATH=
# For SMS notifications (if implemented)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Performance Tuning
# Maximum concurrent commands (adjust based on device resources)
MAX_CONCURRENT_COMMANDS=5
# Command processing timeout in seconds
COMMAND_TIMEOUT=30
# Set to true to enable logging of performance metrics
LOG_PERFORMANCE=false

# Debugging (set to true only when troubleshooting)
DEBUG_MODE=false
VERBOSE_LOGGING=false