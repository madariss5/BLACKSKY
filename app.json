{
  "name": "BLACKSKY-MD",
  "description": "WhatsApp Multi-Device Bot with enhanced features and cloud compatibility",
  "keywords": ["whatsapp", "bot", "multi-device", "baileys", "cloud", "heroku"],
  "env": {
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number with country code (no + or spaces)",
      "required": true
    },
    "PREFIX": {
      "description": "Command prefix (default: !)",
      "value": "!",
      "required": false
    },
    "GROUP_ONLY_MSG": {
      "description": "Message to send when a user tries to use the bot in private chat",
      "value": "This bot only works in groups!",
      "required": false
    },
    "DISABLE_PM": {
      "description": "Disable private messages (true/false)",
      "value": "false",
      "required": false
    },
    "ENABLE_NSFW": {
      "description": "Enable NSFW commands (true/false)",
      "value": "false",
      "required": false
    },
    "LANGUAGE": {
      "description": "Bot language (en, es, pt, etc.)",
      "value": "en",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ],
  "stack": "heroku-22",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "scripts": {
    "postdeploy": "node src/cloud-qr-server.js"
  },
  "success_url": "/qr"
}