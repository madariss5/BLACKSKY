{
  "name": "BLACKSKY-MD WhatsApp Bot",
  "description": "Advanced WhatsApp Multi-Device Bot with enhanced connection stability",
  "repository": "https://github.com/yourusername/blacksky-md",
  "logo": "https://raw.githubusercontent.com/yourusername/blacksky-md/main/generated-icon.png",
  "keywords": ["whatsapp", "bot", "baileys", "node", "javascript"],
  "env": {
    "PREFIX": {
      "description": "Bot command prefix",
      "value": "!"
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number without + or country code (e.g., 1234567890)",
      "value": "",
      "required": true
    },
    "NODE_ENV": {
      "description": "Environment for Node.js",
      "value": "production"
    },
    "OPENWEATHERMAP_API_KEY": {
      "description": "API key for weather functionality",
      "required": false
    },
    "TWILIO_ACCOUNT_SID": {
      "description": "Twilio Account SID for SMS notifications",
      "required": false
    },
    "TWILIO_AUTH_TOKEN": {
      "description": "Twilio Auth Token for SMS notifications",
      "required": false
    },
    "TWILIO_PHONE_NUMBER": {
      "description": "Twilio Phone Number for sending SMS",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  }
}