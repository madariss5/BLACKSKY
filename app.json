{
  "name": "BLACKSKY-MD WhatsApp Bot",
  "description": "Advanced WhatsApp Multi-Device Bot with enhanced connection stability",
  "repository": "https://github.com/yourusername/blacksky-md",
  "logo": "https://raw.githubusercontent.com/yourusername/blacksky-md/main/generated-icon.png",
  "keywords": ["whatsapp", "bot", "baileys", "node", "javascript"],
  "env": {
    "PREFIX": {
      "description": "Bot command prefix",
      "value": ".",
      "required": false
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number WITH country code but WITHOUT + symbol (e.g., 491234567890 for Germany)",
      "value": "",
      "required": true
    },
    "NODE_ENV": {
      "description": "Environment for Node.js",
      "value": "production"
    },
    "AUTH_DIR": {
      "description": "Directory to store auth files",
      "value": "auth_info_baileys",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-22"
}