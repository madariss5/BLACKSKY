{
  "name": "WhatsApp Bot",
  "description": "A reliable WhatsApp bot optimized for Heroku deployment",
  "repository": "https://github.com/yourusername/whatsapp-bot",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "whatsapp", "bot", "baileys"],
  "env": {
    "ADMIN_NUMBER": {
      "description": "Your WhatsApp number without the + sign (e.g., 1234567890)",
      "required": false,
      "value": "4915561048015"
    },
    "LOG_LEVEL": {
      "description": "Logging level (info, warn, error, debug)",
      "required": false,
      "value": "info"
    },
    "ENABLE_COMMANDS": {
      "description": "Enable or disable command processing (true/false)",
      "required": false,
      "value": "true"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}