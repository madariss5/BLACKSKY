{
  "name": "WhatsApp Multi-Device Bot",
  "description": "A comprehensive WhatsApp bot with multi-device support and extensive features",
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "multi-device"
  ],
  "repository": "https://github.com/yourusername/whatsapp-bot",
  "success_url": "/",
  "env": {
    "OWNER_NUMBER": {
      "description": "WhatsApp number of the bot owner (format: 1234567890)",
      "required": true
    },
    "SESSION_ID": {
      "description": "Unique session ID for multi-device support",
      "required": true,
      "generator": "secret"
    },
    "BOT_PREFIX": {
      "description": "Command prefix for the bot (default: .)",
      "required": true,
      "value": "."
    },
    "BOT_NAME": {
      "description": "Custom name for your bot (default: WhatsApp-MD)",
      "required": false,
      "value": "WhatsApp-MD"
    },
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "OPENWEATHERMAP_API_KEY": {
      "description": "API key for weather commands (from openweathermap.org)",
      "required": false
    },
    "GOOGLE_API_KEY": {
      "description": "API key for Google services",
      "required": false
    },
    "WOLFRAM_APP_ID": {
      "description": "App ID for Wolfram Alpha queries",
      "required": false
    },
    "NEWS_API_KEY": {
      "description": "API key for news commands",
      "required": false
    },
    "LOG_LEVEL": {
      "description": "Logging level (error, warn, info, debug)",
      "required": false,
      "value": "info"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ],
  "stack": "heroku-22"
}