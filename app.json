{
  "name": "WhatsApp Bot",
  "description": "A sophisticated WhatsApp multi-device bot with 490+ commands and reliable connection",
  "repository": "https://github.com/yourusername/your-repo-name",
  "logo": "https://raw.githubusercontent.com/yourusername/your-repo-name/main/generated-icon.png",
  "keywords": ["whatsapp", "bot", "baileys", "node", "javascript"],
  "env": {
    "ADMIN_NUMBER": {
      "description": "Your WhatsApp number with country code (no +)",
      "value": "",
      "required": true
    },
    "CREDS_JSON": {
      "description": "Contents of your creds.json file from auth_info_baileys folder (alternative to file upload)",
      "value": "",
      "required": false
    },
    "PORT": {
      "description": "Port for web server (Heroku will set this automatically)",
      "value": "5000",
      "required": false
    },
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-22",
  "success_url": "/status",
  "addons": [],
  "environments": {
    "test": {
      "env": {
        "NODE_ENV": "test"
      }
    }
  }
}