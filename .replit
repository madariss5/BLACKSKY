args = "node heroku-bot.js"
waitForPort = 8000

[[workflows.workflow]]
name = "Heroku Web Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5001 node heroku-bot.js"
waitForPort = 5001

